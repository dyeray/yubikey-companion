{
  "description": "Easy OTP codes on the browser with a Yubikey",
  "manifest_version": 2,
  "name": "yubikey-companion",
  "version": "1.0",
  "author": "dyeray <dyeray@gmail.com>",
  "homepage_url": "https://github.com/dyeray/yubikey-companion",
  "icons": {
    "48": "icons/star.png"
  },

  "background": {
    "scripts": [ "background/script.js" ]
  },

  "permissions": [
    "nativeMessaging",
    "menus",
    "activeTab",
  ],

  "applications": {
    "gecko": {
      "id": "yubicompanion@dyeray",
      "strict_min_version": "92.0"
    }
  },

  "options_ui": {
    "page": "ui/options.html",
    "browser_style": true
  }

}
